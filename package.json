{
    "name": "brainbox",
    "version": "1.0.0",
    "description": "Learn new skill everyday",
    "main": "dist/server.js",
    "scripts": {
        "deploy": "npm run dist && npm run db:create:prod && npm run migrate:up:prod && npm run seed:all:prod",
        "dist": "npm install && npx tsc",
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "db:create:dev": "cross-env NODE_ENV=development sequelize-cli db:create",
        "migrate:up:dev": "cross-env NODE_ENV=development sequelize-cli db:migrate",
        "migrate:undo:dev": "cross-env NODE_ENV=development sequelize-cli db:migrate:undo",
        "migrate:undo:all:dev": "cross-env NODE_ENV=development sequelize-cli db:migrate:undo:all",
        "seed:all:dev": "cross-env NODE_ENV=development sequelize-cli db:seed:all",
        "seed:undo:all:dev": "cross-env NODE_ENV=development sequelize-cli db:seed:undo:all",
        "db:create:prod": "cross-env NODE_ENV=production sequelize-cli db:create",
        "migrate:up:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate",
        "migrate:undo:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate:undo",
        "migrate:undo:all:prod": "cross-env NODE_ENV=production sequelize-cli db:migrate:undo:all",
        "seed:all:prod": "cross-env NODE_ENV=production sequelize-cli db:seed:all",
        "seed:undo:all:prod": "cross-env NODE_ENV=production sequelize-cli db:seed:undo:all",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format:check": "prettier --write . --check",
        "format:fix": "prettier --write . --fix",
        "prepare": "husky"
    },
    "author": "shanisharrma",
    "license": "ISC",
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@eslint/js": "^9.11.1",
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/eslint__js": "^8.42.3",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.7.4",
        "@types/nodemailer": "^6.4.16",
        "@types/sequelize": "^4.28.20",
        "@types/source-map-support": "^0.5.10",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^10.0.0",
        "eslint": "^9.11.1",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.7.0"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cloudinary": "^1.41.3",
        "colorette": "^2.0.20",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "countries-and-timezones": "^3.7.0",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.13",
        "dotenv-flow": "^4.1.0",
        "express": "^4.21.0",
        "helmet": "^8.0.0",
        "http-status-codes": "^2.3.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "libphonenumber-js": "^1.11.10",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.11.3",
        "nodemailer": "^6.9.15",
        "pg": "^8.13.1",
        "pg-hstore": "^2.3.4",
        "rate-limiter-flexible": "^5.0.3",
        "razorpay": "^2.9.4",
        "resend": "^4.0.0",
        "sequelize": "^6.37.3",
        "sequelize-cli": "^6.6.2",
        "source-map-support": "^0.5.21",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^10.0.0",
        "winston": "^3.14.2"
    }
}
